generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Users{
    user_id       Int @id @default(autoincrement())
    username      String
    password      String
    email         String  @unique
    role          String?
    permission    Permissions? @relation(fields: [role], references: [permission_name])
}

model Permissions{
    permission_id   Int @id @default(autoincrement())
    permission_name String @unique
    allow_pages     Json
    users           Users[]
}

