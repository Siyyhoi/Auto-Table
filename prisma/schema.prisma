generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Users{
    user_id       Int @id @default(autoincrement())
    username      String
    password      String
    email         String  @unique
    role          String?
    permission    Permissions? @relation(fields: [role], references: [permission_name])
    schedules Schedules[]
}

model Permissions{
    permission_id   Int @id @default(autoincrement())
    permission_name String @unique
    allow_pages     Json
    users           Users[]
}

model Schedules {
  id          String   @id @default(uuid()) // ใช้ UUID ให้ตรงกับ type ของคุณ
  name        String
  // พระเอกของเรา: เก็บข้อมูล ScheduleSheet ทั้งก้อน (รวม teachers, rooms, slots)
  data        Json     
  userId      Int
  user        Users    @relation(fields: [userId], references: [user_id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

